extends layout

block content
    form(class="main" action="" method="POST")
      .form_input
        textarea(data-autoresize name="first" class="form_textarea" required placeholder="Введите исходный код первой программы")
      .form_input.button_input
        div.compare_button_block
          button.compare_button.button#leven Расстояние Левеншатйна
          div.plagiarized 
            span 75%
          i.material-icons.refresh refresh
        button.compare_button.button#shilling W-shilling
      .form_input
        textarea(data-autoresize name="second" class="form_textarea" required placeholder="Введите исходный код второй программы")
    
    if result.length > 1
      .result_wrapper
        p= result
    script(type="text/javascript" src="/js/theme.js")
    script(type="text/javascript" src="/js/autoresize.js")
    script(type="text/javascript" src="/js/showResults.js")
    script(type="text/javascript" src="/js/fetch.js")